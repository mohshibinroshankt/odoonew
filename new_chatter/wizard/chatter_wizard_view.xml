<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_new_chatter_wizard_form" model="ir.ui.view">
        <field name="name">new.chatter.wizard.form</field>
        <field name="model">new.chatter.wizard</field>
        <field name="arch" type="xml">
            <form string="CHatter Wizard">
                <group>
                    <field name="new_msg"/>

                </group>
                <footer>
                    <button string="send" type="object" name="add_msg_to_chatter" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_new_chat_wizard" model="ir.actions.act_window">
        <field name="name">New Chatter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">new.chatter.wizard</field>
        <field name="view_id" ref="view_new_chatter_wizard_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>

    </record>


</odoo>
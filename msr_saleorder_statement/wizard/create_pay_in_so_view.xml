<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_new_so_pay_wizard_form" model="ir.ui.view">
            <field name="name">create.payment.wizard.form</field>
            <field name="model">create.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Create New Payment">
                    <group>
                        <field name="journal_id"/>
                        <field name="payment_method_line_id"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="amount"/>
                        <field name="sale_order_id"/>
                    </group>
                    <footer>
                        <button name="action_create_pay_so" type="object" string="Create Payment"/>
                    </footer>


                </form>
            </field>
        </record>


        <record id="action_new_wizard_so" model="ir.actions.act_window">
            <field name="name">New Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.payment.wizard</field>
            <field name="view_id" ref="view_new_so_pay_wizard_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>

        </record>

    </data>

</odoo>
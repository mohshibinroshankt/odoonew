<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="test_sale_order_report_view" inherit_id="sale.report_saleorder_document">

        <xpath expr="//div[@id='informations']" position="after">
            <strong>Vat Number:</strong>
            <p class="m-0" t-field="doc.vat_number"/>

        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table mt-4']/thead/tr/th[@name='th_description']" position="before">


            <th name="th_serial_number" class="text-start"> Serial No </th>
            <field name="serial_number"/>


        </xpath>
        <xpath expr="//tbody[@class='sale_tbody']/t/tr/t/td[@name='td_name']" position="before">

            <td name="td_serial_number"><span t-field="line.serial_number"/></td>



        </xpath>


    </template>
</odoo>
    <record id="new_product_wizard" model="ir.ui.view">
        <field name="name">new.product.wizard.form</field>
        <field name="model">new.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Wizard">
                <group>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="unit_price"/>
                </group>
                <footer>
                    <button string="Add to Order" type="object" name="add_product_to_order" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>



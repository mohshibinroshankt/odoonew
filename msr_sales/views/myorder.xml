<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_msr_orders_form" model="ir.ui.view">
        <field name="name">myown.orders.form</field>
        <field name="model">myown.orders</field>
        <field name="arch" type="xml">
            <form>
                <header>


                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="order_item"/>

                            <field name="gender"/>

                        </group>
                        <group>
                            <field name="order_time"/>
                            <field name="order_date"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Supplier details" name="Supplier details">

                        </page>
                    </notebook>



                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_msr_orders_tree" model="ir.ui.view">
        <field name="name">myown.orders.tree</field>
        <field name="model">myown.orders</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_item"/>
                <field name="order_time"/>
                <field name="order_date"/>
                <field name="gender"/>


            </tree>
        </field>
    </record>

    <record id="msr_orders_search" model="ir.ui.view">
        <field name="name">msr.orders.search</field>
        <field name="model">myown.orders</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>


    <record id="action_msr_orders" model="ir.actions.act_window">
        <field name="name">My Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">myown.orders</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Order!
            </p>
        </field>

    </record>


    <menuitem id="menu_msr_myorders"
              name="My Orders"
              parent="menu_msr_operations"
              action="action_msr_orders"
              sequence="10"/>


</odoo>
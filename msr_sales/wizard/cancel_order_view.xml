<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_cancel_orders_form" model="ir.ui.view">
        <field name="name">cancel.orders.wizard</field>
        <field name="model">cancel.orders.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="order_id"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="action_cancel" type="object" string="Cancel Order" class="btn-primary"
                            data-hotkey="q"/>
                    <button special="cancel" data-hotkey="z" string="Discard"/>
                </footer>

            </form>
        </field>
    </record>


    <record id="action_cancel_orders" model="ir.actions.act_window">
        <field name="name">Cancel orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.orders.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>


    </record>


</odoo>